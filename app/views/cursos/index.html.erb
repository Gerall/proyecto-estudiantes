<br><br>
<%- model_class = Curso -%>

<br>
 <h1>Cursos</h1>
<br>

<%= form_tag request.path, :method => 'get' do %>
 <%= content_tag :label do %>
  <h4>Nombre Curso: </h4>
 <%= text_field_tag :search, params[:search] %>
 <%= submit_tag "Consultar", :nombre => nil %>
 <% end %>
<% end %>

<%= form_tag request.path, :method => 'get' do %>
  <%= content_tag :label do %>
    Numero Registros:
    <%= text_field_tag :registro, params[:registro], :class =>'input-mini' %>
  <% end %>
<% end %>


<p>
 <h4>Total Cursos : <%= @cursos.total_entries %></h4>
</p>


<table border ="1" class="table table-hover table-condensed pretty">
 <thead>
   <tr>
       <th><%= sortable "id" %></th>
       <th><%= sortable "ficha" %></th>
       <th><%= sortable "nombre" %></th>
       <th>Acciones</th>
       <th>Estudiantes</th>
   </tr>
 </thead>
 <tbody>
   <%= render @cursos %>
 </tbody>
</table>
<tr>
  <td><%= link_to 'Nuevo Curso', new_curso_path, :class => 'btn btn-primary', :remote => true %></td>
</tr>

</div>

<div align="center">
 <%= will_paginate @cursos, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente&raquo;' %>
</div>